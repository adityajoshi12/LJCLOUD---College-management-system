<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/dimen_common_spacing_07"
        android:layout_weight="1"
        android:background="@color/color_blue_dark"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dailydiary"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_common_spacing_15"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_common_spacing_07"
            android:layout_margin="@dimen/dimen_common_spacing_15"
            android:text="HELLO"
            android:textColor="@color/color_white"
            style="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold" />

