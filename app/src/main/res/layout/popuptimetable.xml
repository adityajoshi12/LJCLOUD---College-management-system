<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/roundedlayout"
    style="@style/popupview">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter lecture time"
            android:id="@+id/popuptime"
            android:padding="10dp"
            android:background="@drawable/bachgroud_text"
            android:drawableLeft="@drawable/enrollment"
            android:drawablePadding="@dimen/dimen_common_spacing_20"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lecture name"
            android:id="@+id/lec_name"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/enrollment"
            android:drawablePadding="@dimen/dimen_common_spacing_20"
            android:background="@drawable/bachgroud_text"

            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:text="SAVE"
            android:id="@+id/done"/>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"></View>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:text="CANCEL"
            android:id="@+id/cancel"/>

    </LinearLayout>


</LinearLayout>